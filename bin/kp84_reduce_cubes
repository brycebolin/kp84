        if opts.doAstrometryNet:
            ztfsub.utils.astrometrynet(scienceimage,pixel_scale=0.26,ra=ra,dec=dec,ext=1)
            axyfile = scienceimage.replace("fits","axy")
            hdulist = fits.open(axyfile) 
            print(hdulist[1].data)

        ztfsub.utils.sextractor(fitsfile,defaultsDir,doSubtractBackground=opts.doSubtractBackground,catfile=catfile,backfile=backfile)

        cat = np.loadtxt(catfile)
        xs, ys, mags, magerrs, ras, decs, A, B, A_world, B_world, theta, theta_world, fwhms_world, fwhms, extnumber = cat[:,0], cat[:,1], cat[:,2], cat[:,3], cat[:,4], cat[:,5], cat[:,6], cat[:,7], cat[:,8], cat[:,9], cat[:,10], cat[:,11], cat[:,12], cat[:,13], cat[:,14]
        
        fwhmmax = 5e-3
        xmin = 0
        xmax = 10000

        idx = np.where((fwhms <= fwhmmax) & (xs >= xmin) & (xs <= xmax) & (mags <= minmag))[0]
        cat = cat[idx,:]
        np.savetxt(catfile,cat,fmt='%.5f')

    for ii,fitsfile in enumerate(fitsfiles):
        path_out_dir_tmp='%s/%d'%(path_out_dir,ii)
        scienceimage = '%s/science.fits'%(path_out_dir_tmp)
        catfile = scienceimage.replace(".fits",".cat")

        if ii == 0:
            tbl = ascii.read(catfile,names=['X','Y','mag','magerr','RA','Declination','A','B','A_World','B_World','Theta','Theta_World','FWHM_World','FWHM','EXT'])
            tbl['FILE_INDEX'] = ii
        else:
            tbltemp = ascii.read(catfile,names=['X','Y','mag','magerr','RA','Declination','A','B','A_World','B_World','Theta','Theta_World','FWHM_World','FWHM','EXT'])
            tbltemp['FILE_INDEX'] = ii
            tbl = vstack([tbl,tbltemp])
   
    catfile = '%s/catfile.dat'%(path_out_dir)
    ascii.write(tbl,catfile)

tbl = ascii.read(catfile,names=['X','Y','mag','magerr','RA','Declination','A','B','A_World','B_World','Theta','Theta_World','FWHM_World','FWHM','EXT','FILE_INDEX'])

ra_deg = (np.max(tbl["RA"]) + np.min(tbl["RA"]))/2.0
dec_deg = (np.max(tbl["Declination"]) + np.min(tbl["Declination"]))/2.0
result = ps1_query(ra_deg, dec_deg, 1.0, maxmag=20,
               maxsources=10000)

coo_kp84 = SkyCoord(tbl['RA']*u.deg, tbl['Declination']*u.deg)
coo_ps1 = SkyCoord(result['RAJ2000'], result['DEJ2000'])
idx_ps1, d2d_ps1, d3d_ps1 = coo_kp84.match_to_catalog_sky(coo_ps1)

def linear_fit(x):
    return m * x + b
xdata, ydata, yerr = np.array(result[idx_ps1]["gmag"]), np.array(tbl["mag"]), np.array(tbl["magerr"])
#y_fit = linear_fit(xdata, 1, 2)
#popt, pcov = curve_fit(linear_fit, xdata, ydata, sigma=yerr, p0=[1.0,-50.0], bounds=([-100.0,-100.0],[100.0, 100.0]))

z = np.polyfit(xdata, ydata, 1)
p = np.poly1d(z)

if opts.doPlots:
    xstar, ystar = 671.4644, 425.9586
    lims = 50.0
